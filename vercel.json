{
    "version": 2,
  "builds": [
    {
        "src": "frontend/package.json",
        "use": "@vercel/static-build",
        "config": {
            "distDir": "dist"
        }
    },
    {
        "src": "backend/package.json",
        "use": "@vercel/node",
        "config": {
            "includeFiles": ["prisma/**"]
        }
    }
],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/backend/server.js"
        },
      {
            "src": "/assets/(.*)",
            "dest": "/frontend/assets/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/index.html"
}
    ],
    "env": {
        "NODE_ENV": "production",
        "NEXT_PUBLIC_BASE_URL": "https://www.scheduling.my"
    }
}
